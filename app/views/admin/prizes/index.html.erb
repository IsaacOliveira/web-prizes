<main class="container mt-5">
  <div class="row">
    <div class="col-sm-6 bd-content">
      <h2 class="bd-title">List of prizes</h2>
    </div>
    <div class="col-sm-6">
      <%= link_to "Create new prize", new_admin_prize_path, class: "btn btn-primary float-right" %>
      <%= link_to "Prize Conditions", admin_prize_conditions_path, class: "btn btn-secondary float-right mr-3"  %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity Left</th>
            <th scope="col">Edit</th>
            <th scope="col">Destroy</th>
          </tr>
        </thead>
        <tbody>
          <% @prizes.each do | prize | %>
            <tr>
              <th scope="row"><%= prize.id %></th>
              <td><%= prize.name %></td>
              <td><%= prize.quantity %></td>
              <td><%= link_to "Edit", edit_admin_prize_path(prize.id) %></td>
              <td>
                <% unless prize.has_conditions? %>
                  <%= link_to "X", admin_prize_path(prize.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
          <% if @prizes.empty? %>
          <tr >
            <td colspan="5">No prizes created yet</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>