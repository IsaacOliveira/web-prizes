<%= form_tag subscribers_path, remote: true do %>
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-1 col-form-label">Email</label>
    <div class="col-sm-4">
      <%= email_field_tag :email, "", class: "form-control", placeholder: "joe@email.com" %>
    </div>
    <div class="col-sm-4">
      <%= submit_tag "Subscribe", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>